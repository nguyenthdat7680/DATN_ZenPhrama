@model IEnumerable<NhaThuocOnline.ViewModel.Product.ProductBasicVm>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegularPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isPrescriptionRequired)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegularPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isPrescriptionRequired)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id }) 
            </td>
        </tr>
}
    </tbody>
</table>
<div class="ml-2 mt-4">
    <ul class="pagination">
        <li class="page-item @(ViewBag.PageIndex == 1 ? "disabled" : "")">
            <a href="@Url.Action("Search", new { pageIndex = ViewBag.PageIndex -1  })" class="page-link rounded">Trước</a>
        </li>
        @for (int i = 1; i <= ViewBag.PageCount; i++)
        {
            <li class="page-item @(i == ViewBag.PageIndex ? "active" : "") ">
                <a href="@Url.Action("Search", new { pageIndex = i })" class="page-link rounded">@i</a>
            </li>
        }
        <li class="page-item @(ViewBag.PageIndex == ViewBag.PageCount ? "disabled" : "")">
            <a href="@Url.Action("Search", new { pageIndex = ViewBag.PageIndex + 1  })" class="page-link rounded">Sau</a>
        </li>
    </ul>
</div>
